                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="1 bottle"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_12"
                    android:gravity="end"

                    android:fontFamily="@font/century_gothic"
                    />


