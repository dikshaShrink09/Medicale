<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/txt_Display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert"


            android:background="@drawable/bg_text"
            android:fontFamily="@font/century_gothic"
            android:foregroundGravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/size_5"
            android:paddingTop="@dimen/size_5"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
        android:id="@+id/txt_msz"
        android:layout_width="285dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/century_gothic"
        android:foregroundGravity="center"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="3"

        android:minLines="3"
        android:paddingTop="@dimen/size_5"

        android:paddingBottom="@dimen/size_5"
        android:text="@string/success_your_order_has_been_requested_successfully_please_track_the_status_in_my_prescription"
        android:textColor="@color/blue"
        android:textSize="@dimen/size_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Display_name" />

    <TextView
        android:id="@+id/btn_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="@dimen/size_12"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="@dimen/size_20"
        android:paddingLeft="@dimen/size_20"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_5"
        android:fontFamily="@font/century_gothic"
        android:background="@drawable/bg_text"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_msz"
        />
</androidx.constraintlayout.widget.ConstraintLayout>