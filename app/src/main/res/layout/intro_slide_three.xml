<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/heading_one"
        android:textColor="@color/theme3"
        android:textSize="@dimen/size_20"
        android:layout_width="wrap_content"
        android:text="Delivery at your Doorstep"

        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/century_gothic"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/size_80"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"



        />
    <TextView
        android:id="@+id/txt_txty"
        android:textColor="@color/blue"
        android:textSize="@dimen/size_16"
        android:layout_width="match_parent"
        android:text="otc product"

        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/century_gothic"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/size_5"

        app:layout_constraintTop_toBottomOf="@+id/heading_one"

        app:layout_constraintRight_toRightOf="parent"

        />
    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="@dimen/size_250"
        android:layout_height="200dp"
        android:background="@drawable/intro_three"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_txty"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"

        android:layout_marginTop="@dimen/size_40"
        android:layout_marginBottom="@dimen/size_30"
        />
</androidx.constraintlayout.widget.ConstraintLayout>