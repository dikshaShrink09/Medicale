<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        android:paddingTop="@dimen/size_10"
        app:cardUseCompatPadding="true"

        android:paddingBottom="@dimen/size_10"
        app:cardCornerRadius="4sp"
        app:cardElevation="4dp"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"

        >
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                app:cardCornerRadius="10dp"

               android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img_video"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/size_70"
                    android:layout_height="@dimen/size_70"
                    android:scaleType="fitXY"
                    android:src="@drawable/dwai" />


            </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_10"
                >

                <TextView
                    android:id="@+id/txt_order_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"

                    android:fontFamily="@font/century_gothic"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:text="@string/order_id"

                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"

                    android:maxLines="2"

                    />


                <TextView
                    android:id="@+id/txt_order_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:layout_marginLeft="@dimen/size_10"
                    android:fontFamily="@font/century_gothic"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:text="#123653"

                    android:textColor="@color/theme3"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"



                    />


                <TextView
                    android:id="@+id/txt_order_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"

                    android:fontFamily="@font/century_gothic"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="$ 125636.00"

                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"

                    android:maxLines="2"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/size_8"
                android:layout_marginRight="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_20">
                <TextView
                    android:id="@+id/txt_order_type"
                    android:layout_width="wrap_content"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/century_gothic"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:text="Order Pending"

                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"



                    />

                <TextView
                    android:id="@+id/txt_paymentstatus"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/century_gothic"
                    android:gravity="end"
                    android:layout_gravity="left"
                    android:text="Order Pending"

                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"



                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_20"


                >

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:fontFamily="@font/century_gothic"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:text="@string/_25_08_2021"

                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"

                    android:maxLines="2"

                    />






                <!--  <TextView
                      android:id="@+id/txt_order_price"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.1"

                      android:fontFamily="@font/century_gothic"
                      android:gravity="right"
                      android:layout_gravity="center"
                      android:text="$ 125636.00"

                      android:textColor="@color/black"
                      android:textSize="@dimen/size_12"
                      android:textStyle="bold"

                      android:maxLines="2"

                      />-->
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:gravity="right"
                    >
                    <ImageView
                        android:id="@+id/img_info"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:background="@drawable/ic_information_button"



                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/size_5">
                <TextView
                    android:id="@+id/txt_make_payment11"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingTop="@dimen/size_5"
                    android:layout_marginLeft="@dimen/size_10"
                    android:fontFamily="@font/century_gothic"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/make_payment"
                    android:background="@drawable/btn_blue_bg_two"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"



                    />
                <TextView
                    android:id="@+id/tv_cancelorder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingTop="@dimen/size_5"
                    android:layout_marginLeft="@dimen/size_10"
                    android:fontFamily="@font/century_gothic"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/cancel"
                    android:backgroundTint="@color/red"
                    android:background="@drawable/btn_blue_bg_two"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"



                    />


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>